//Tabelas do Trabalho
https://dbdiagram.io/d/BD2-665fad33b65d933879847870

Table paciente {
  PacienteID INT [pk, increment]
  Nome VARCHAR(100) [not null]
  DataNascimento DATE [not null]
  Sexo CHAR(1)
  Endereco VARCHAR(200)
}

Table dentista {
  DentistaID INT [pk, increment]
  Nome VARCHAR(100) [not null]
  CRO VARCHAR(20) [not null, unique] // Conselho Regional de Odontologia
  Especialidade VARCHAR(50)
}

Table consulta {
  ConsultaID INT [pk, increment]
  PacienteID INT [ref: > paciente.PacienteID]
  DentistaID INT [ref: > dentista.DentistaID]
  DataHora DATETIME [not null]
  Motivo VARCHAR(255)
}

Table procedimento {
  ProcedimentoID INT [pk, increment]
  Descricao VARCHAR(255) [not null]
  Custo DECIMAL(10, 2)
}

Table pagamento {
  PagamentoID INT [pk, increment]
  Titulo VARCHAR(100)
  Conteudo TEXT [note: 'ConteÃºdo do post']
  Status VARCHAR(50)
}

Table endereco {
  EnderecoID INT [pk, increment]
  Rua VARCHAR(100)
  Cidade VARCHAR(100)
  Estado VARCHAR(50)
  Cep VARCHAR(20)
  PacienteID INT [ref: > paciente.PacienteID]
}

Table contato {
  ContatoID INT [pk, increment]
  Numero VARCHAR(15)
  Tipo VARCHAR(50)
  Telefone VARCHAR(15)
  Email VARCHAR(100)
  PacienteID INT [ref: > paciente.PacienteID]
}

Table prontuario {
  ProntuarioID INT [pk, increment]
  PacienteID INT [ref: > paciente.PacienteID]
  DentistaID INT [ref: > dentista.DentistaID]
  Data DATETIME [not null]
  Diagnostico VARCHAR(255)
  TratamentoID INT [ref: > procedimento.ProcedimentoID]
  Observacoes TEXT
}
